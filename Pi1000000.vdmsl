state Leibniz of
    quarterPi : real
    x : int
init s == s = mk_Leibniz(0.0, 1)
end

operations
    step : () ==> ()
    step() ==
        (quarterPi := quarterPi + 1.0 / x;
        x := x * -1 + (if x < 0 then 2 else -2));
    
    pi : () ==> real
    pi() == (for i = 1 to 1000000 do step(); return quarterPi * 4.0);

    bench : () ==> ()
    bench() == let - = pi() in skip;
